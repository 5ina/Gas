@model Decimal?
@Html.TextBoxFor(model => model)
<script>
    $(document).ready(function() {
        $("#@Html.IdForModel()").TouchSpin({
            min: @(0.00),
            max: @(decimal.MaxValue),
            decimals: 2, //always display 4 digits
            boostat: 5,
            maxboostedstep: 10,
            step: 0.01,
        });
    });
</script>
