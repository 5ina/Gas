@model GasSolution.Web.Areas.Admin.Models.Setting.AllSettingsListModel
@{
    ViewBag.Title = "高级配置";
}
<section class="content-header">
    <h1>配置列表（高级选项）</h1>
</section>
<section class="content">

    <div class="form-horizontal">
        <div class="panel-group">
            <div class="panel panel-default panel-search">
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <div class="col-md-4">
                                @Html.GasLabelFor(model => model.SearchSettingName)
                            </div>
                            <div class="col-md-8">
                                @Html.GasEditorFor(model => model.SearchSettingName)
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-4">
                                @Html.GasLabelFor(model => model.SearchSettingValue)
                            </div>
                            <div class="col-md-8">
                                @Html.GasEditorFor(model => model.SearchSettingValue)
                            </div>
                        </div>
                    </div>

                    <div class="col-md-4 col-md-offset-2">

                        <button type="button" id="search-settings" class="btn btn-primary btn-search">
                            <i class="fa fa-search"></i>
                            搜索
                        </button>
                    </div>
                </div>
            </div>
        </div>
        <div class="portlet-body">

            <div id="settings-grid"></div>
            @Html.AntiForgeryToken()
        </div>
        </div>
</section>


<script>
    $(document).ready(function () {
        $("#settings-grid").kendoGrid({
            dataSource: {
                type: "json",
                transport: {
                    read: {
                        url: "@Html.Raw(Url.Action("List", "Setting"))",
                        type: "POST",
                        dataType: "json",
                        contentType: "application/json",
                        data: additionalData
                    },
                    update: {
                        url: "@Html.Raw(Url.Action("SettingUpdate", "Setting"))",
                        type: "POST",
                        dataType: "json",
                        data: addAntiForgeryToken
                    },
                    destroy: {
                        url: "@Html.Raw(Url.Action("SettingDelete", "Setting"))",
                        type: "POST",
                        dataType: "json",
                        data: addAntiForgeryToken
                    },
                    parameterMap: function (data, operation) {
                        if (operation != "read") {
                            return data;
                        } else {
                            //for some reasons only such "Filter" data be parsed
                            return JSON.stringify(data);
                        }
                    }
                },
                schema: {
                    data: "Data",
                    total: "Total",
                    errors: "Errors",
                    model: {
                        id: "Id",
                        fields: {
                            Name: { editable: true, type: "string" },
                            Value: { editable: true, type: "string" },
                            Id: { editable: false, type: "number" }
                        }
                    }
                },
                requestEnd: function (e) {
                    if (e.type == "create" || e.type == "update") {
                        this.read();
                    }
                },
                error: function (e) {
                    display_kendoui_grid_error(e);
                    // Cancel the changes
                    this.cancelChanges();
                },
                serverPaging: true,
                serverFiltering: false,
                serverSorting: false
            },
            pageable: {
                refresh: true,
                pageSizes: [10, 20, 50]
            },
            editable: {
                confirmation: "确认删除",
                mode: "inline"
            },
            scrollable: false,
            columns: [
                {
                    field: "Id",
                    title: "Id",
                    width: 100,
                    headerAttributes: { style: "text-align:center" },
                    attributes: { style: "text-align:center" },
                }, {
                    field: "Name",
                    title: "配置名称",
                    headerAttributes: { style: "text-align:center" },
                }, {
                    field: "Value",
                    title: "配置值",
                    headerAttributes: { style: "text-align:center" },
                    attributes: { style: "text-align:center" },
                }, {
                    command: [
                        {
                            name: "edit",
                            text: {
                                edit: "编辑",
                                update: "更新",
                                cancel: "取消"
                            }
                        }, {
                            name: "destroy",
                            text: "删除"
                        }
                    ],
                    width: 200
                }
            ]
        });
    });


                        function additionalData() {
                            var data = {
                                SearchSettingName: $('#@Html.FieldIdFor(model => model.SearchSettingName)').val(),
                                SearchSettingValue: $('#@Html.FieldIdFor(model => model.SearchSettingValue)').val()
                            };
                            addAntiForgeryToken(data);
                            return data;
                        }
</script>

<script type="text/javascript">
    window.onload = function () {
        lingth_sidebar("setting-list", "gas");
    }
</script>